<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wjianwu.qs.dao.ArticleDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wjianwu.qs.entity.Article">
        <id column="article_id" property="articleId"/>
        <result column="module_id" property="moduleId"/>
        <result column="article_title" property="articleTitle"/>
        <result column="article_title_detail" property="articleTitleDetail"/>
        <result column="article_content" property="articleContent"/>
        <result column="like_count" property="likeCount"/>
        <result column="comment_count" property="commentCount"/>
        <result column="collection_count" property="collectionCount"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectAllArticle" resultType="com.wjianwu.qs.entity.Article">
        SELECT
        *
        FROM
        qs_article
        <where>
            <if test="type != null and type != ''">
                module_id = #{type}
            </if>
        </where>
        ORDER BY
        create_time
        DESC
        LIMIT #{limit}
    </select>
</mapper>
