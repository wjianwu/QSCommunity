<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wjianwu.qs.dao.ProductDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wjianwu.qs.entity.Product">
        <id column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="price" property="price"/>
        <result column="storage" property="storage"/>
        <result column="picture" property="picture"/>
        <result column="product_like" property="productLike"/>
        <result column="description" property="description"/>
        <result column="size" property="size"/>
        <result column="color" property="color"/>
        <result column="putaway_time" property="putawayTime"/>
    </resultMap>

    <select id="selectAllProduct" resultType="com.wjianwu.qs.entity.Product">
        SELECT
            *
        FROM
            qs_product
    </select>

</mapper>
